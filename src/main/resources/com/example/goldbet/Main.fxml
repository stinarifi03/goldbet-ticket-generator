<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.goldbet.MainController2">
    <Label text="Soccer Betting Ticket Generator" style="-fx-font-size: 20; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">
        <!-- Left Column: Match Details -->
        <Label text="Team 1:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <TextField fx:id="team1Field" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="Team 2:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <TextField fx:id="team2Field" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="Odds:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField fx:id="oddsField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="Bet Amount:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <TextField fx:id="betAmountField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

        <Label text="Quota Type:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="quotaTypeField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

        <Label text="League Name:" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <TextField fx:id="leagueNameField" GridPane.rowIndex="5" GridPane.columnIndex="1" />

        <Label text="Bet Type:" GridPane.rowIndex="6" GridPane.columnIndex="0" />
        <TextField fx:id="betTypeField" GridPane.rowIndex="6" GridPane.columnIndex="1" />

        <Label text="Bet Chosen:" GridPane.rowIndex="7" GridPane.columnIndex="0" />
        <TextField fx:id="betChosenField" GridPane.rowIndex="7" GridPane.columnIndex="1" />

        <Label text="Bonus:" GridPane.rowIndex="8" GridPane.columnIndex="0" visible="false" fx:id="bonusLabel" />
        <TextField fx:id="bonusField" GridPane.rowIndex="8" GridPane.columnIndex="1" visible="false" />

        <!-- Middle Column: Ticket Details -->
        <Label text="Ticket Code (CB):" GridPane.rowIndex="0" GridPane.columnIndex="2" />
        <TextField fx:id="ticketCodeField" GridPane.rowIndex="0" GridPane.columnIndex="3" />

        <Label text="TG:" GridPane.rowIndex="1" GridPane.columnIndex="2" />
        <TextField fx:id="tgField" GridPane.rowIndex="1" GridPane.columnIndex="3" />

        <Label text="IB:" GridPane.rowIndex="2" GridPane.columnIndex="2" />
        <TextField fx:id="ibField" GridPane.rowIndex="2" GridPane.columnIndex="3" />

        <Label text="NS:" GridPane.rowIndex="3" GridPane.columnIndex="2" />
        <TextField fx:id="nsField" GridPane.rowIndex="3" GridPane.columnIndex="3" />

        <Label text="Timestamp (OE):" GridPane.rowIndex="4" GridPane.columnIndex="2" />
        <TextField fx:id="timestampField" GridPane.rowIndex="4" GridPane.columnIndex="3" />

        <Label text="Date (GE):" GridPane.rowIndex="5" GridPane.columnIndex="2" />
        <DatePicker fx:id="matchDatePicker" GridPane.rowIndex="5" GridPane.columnIndex="3" />

        <!-- Right Column: Match Metadata -->
        <Label text="Match ID:" GridPane.rowIndex="0" GridPane.columnIndex="4" />
        <TextField fx:id="matchIdField" GridPane.rowIndex="0" GridPane.columnIndex="5" />

        <Label text="Code:" GridPane.rowIndex="1" GridPane.columnIndex="4" />
        <TextField fx:id="codeField" GridPane.rowIndex="1" GridPane.columnIndex="5" />

        <Label text="Sport Type:" GridPane.rowIndex="2" GridPane.columnIndex="4" />
        <TextField fx:id="sportField" GridPane.rowIndex="2" GridPane.columnIndex="5" />

        <Label text="Match Date:" GridPane.rowIndex="3" GridPane.columnIndex="4" />
        <TextField fx:id="dateField" GridPane.rowIndex="3" GridPane.columnIndex="5" />

        <Label text="Match Time:" GridPane.rowIndex="4" GridPane.columnIndex="4" />
        <TextField fx:id="timeField" GridPane.rowIndex="4" GridPane.columnIndex="5" />

        <!-- Buttons -->
        <Button text="Add Match" onAction="#addMatch" GridPane.rowIndex="9" GridPane.columnIndex="0" />
        <Button text="Generate Ticket" onAction="#generateTicket" GridPane.rowIndex="9" GridPane.columnIndex="1" />
        <Button text="Print Ticket" onAction="#printTicketButtonClicked" GridPane.rowIndex="9" GridPane.columnIndex="2" />
    </GridPane>

    <Label text="Ticket Preview:" style="-fx-font-size: 16; -fx-font-weight: bold;" />
    <ScrollPane fx:id="ticketScrollPane" fitToWidth="true" fitToHeight="true">
        <content>
            <VBox fx:id="ticketContainer" />
        </content>
    </ScrollPane>
</VBox>